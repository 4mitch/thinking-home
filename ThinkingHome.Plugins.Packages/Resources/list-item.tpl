<div class="th-margin-bottom-32">
	<h3>{{id}}</h3>
	<p>
		{{description}}
	</p>
	<p>
		<a href="#" 
			class="btn th-btn-width-120 js-btn-install"
			data-action-text="{{lang 'Install'}}"
			data-action-class="btn-primary"
			data-state-class="btn-default">{{lang 'Not_installed'}}</a>

		<a href="#" 
			class="btn th-btn-width-120 js-btn-uninstall"
			data-action-text="{{lang 'Uninstall'}}"
